<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://sourceDbDetailView.title"
      focusComponent="form">
    <data>
        <instance id="sourceDbDc"
                  class="com.company.jmixdatastore.entity.SourceDb">
            <fetchPlan extends="_base"/>
            <loader id="sourceDbDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <vbox spacing="true">
            <!-- Form nhập thông tin kết nối -->
            <formLayout id="form" dataContainer="sourceDbDc">
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="1"/>
                    <responsiveStep minWidth="40em" columns="2"/>
                </responsiveSteps>
                <textField id="nameField" property="name"/>
                <textField id="hostField" property="host" readOnly="false"/>
                <textField id="portField" property="port" trimEnabled="false" readOnly="false"/>
                <textField id="usernameField" property="username" readOnly="false"/>
                <textField id="passwordField" property="password" readOnly="false"/>
                <textField id="dbnameField" property="dbname" readOnly="false"/>
                <textField id="urlField" property="url" readOnly="false"/>
                <select id="datatype" property="dbtype" readOnly="false"/>
            </formLayout>

            <!-- Nút thao tác -->
            <hbox id="detailActions">
                <button id="test_connection" text="Test Connection"/>
                <button id="saveAndCloseButton" action="saveAction"/>
                <button id="closeButton" action="closeAction"/>
            </hbox>
        </vbox>
    </layout>
</view>