<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://sourceDbListView.title"
      focusComponent="sourceDbsDataGrid">
    <data>
        <collection id="sourceDbsDc"
                    class="com.company.jmixdatastore.entity.SourceDb">
            <fetchPlan extends="_base"/>
            <loader id="sourceDbsDl" readOnly="true">
                <query>
                    <![CDATA[select e from SourceDb e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="sourceDbsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="sourceDbsDataGrid.createAction"/>
            <button id="editButton" action="sourceDbsDataGrid.editAction"/>
            <button id="removeButton" action="sourceDbsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="sourceDbsDl"/>
        </hbox>
        <dataGrid id="sourceDbsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="sourceDbsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="url"/>
                <column property="port"/>
                <column property="username"/>
                <column property="password"/>
                <column property="dbname"/>
                <column property="host"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
