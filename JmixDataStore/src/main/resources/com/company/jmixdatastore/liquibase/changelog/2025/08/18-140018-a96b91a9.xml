<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="JmixDataStore">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="PASSWORD" tableName="SOURCE_DB"/>
    </changeSet>
    <changeSet id="2" author="JmixDataStore">
        <dropColumn columnName="PORT" tableName="SOURCE_DB"/>
    </changeSet>
    <changeSet id="3" author="JmixDataStore">
        <addColumn tableName="SOURCE_DB">
            <column name="PORT" type="INT"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="JmixDataStore">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="USERNAME" tableName="SOURCE_DB"/>
    </changeSet>
</databaseChangeLog>